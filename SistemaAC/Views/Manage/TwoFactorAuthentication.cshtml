@model TwoFactorAuthenticationViewModel
@{
    ViewData["Title"] = "Acceso doble factor";
    ViewData.AddActivePage(ManageNavPages.TwoFactorAuthentication);
}

<h4>@ViewData["Title"]</h4>
@if (Model.Is2faEnabled)
{
    if (Model.RecoveryCodesLeft == 0)
    {
        <div class="alert alert-danger">
            <strong>No tienes códigos de recuperación.</strong>
            <p>Debes <a asp-action="GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a> antes de que pueda iniciar sesión con un código de recuperación.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft == 1)
    {
        <div class="alert alert-danger">
            <strong>Usted tiene 1 código de recuperación restante.</strong>
            <p>Usted puede <a asp-action="GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a>.</p>
        </div>
    }
    else if (Model.RecoveryCodesLeft <= 3)
    {
        <div class="alert alert-warning">
            <strong>Tienes @Model.RecoveryCodesLeft códigos de recuperación restantes.</strong>
            <p>Debieras <a asp-action="GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a>.</p>
        </div>
    }

    <a asp-action="Disable2faWarning" class="btn btn-default">Deshabilitar 2FA</a>
    <a asp-action="GenerateRecoveryCodes" class="btn btn-default">Restablecer códigos de recuperación</a>
}

<h5>Aplicación Autenticadora</h5>
@if (!Model.HasAuthenticator)
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Agregar app autenticadora</a>
}
else
{
    <a asp-action="EnableAuthenticator" class="btn btn-default">Configurar app autenticadora</a>
    <a asp-action="ResetAuthenticatorWarning" class="btn btn-default">Resetear clave autenticadora</a>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
